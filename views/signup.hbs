<div class="row mt-5">
  <div class="card shadow col-sm-4 col-sm-offset-4 mx-auto">
    <div class="card-body">
      <h1 class="card-title">
        Sign Up
      </h1>
      <hr>
      <form action="/auth/signup" method="post">
        <div class="form-group">
          <label for="email">
            Email
          </label>
          <input
            type="email"
            name="email"
            class="form-control mb-2"
            id="email"
            placeholder="Email"
          />
          <label for="username">
            Username
          </label>
          <input
            type="text"
            name="username"
            class="form-control mb-2"
            id="username"
            placeholder="Username"
          />
          <label for="password">
            Password
          </label>
          <input
            type="password"
            name="password"
            class="form-control mb-2"
            id="password"
            placeholder="Password"
          />
        </div>
        <div class="text-right">
          <button type="submit" class="btn btn-primary">
            Signup
          </button>
        </div>
      </form>
    </div>
  </div>
</div>